		<%= image_tag "pages/quality/cool-1.jpg" %>
		<%= image_tag "pages/quality/cool-2.jpg" %>
		<%= image_tag "pages/quality/cool-3.jpg" %>
		<%= image_tag "pages/quality/cool-4.jpg" %>
		<%= image_tag "pages/quality/cool-5.jpg" %>
		<%= image_tag "pages/quality/cool-6.jpg" %>
	</div>
</div>
<div class="b-popup f-q2 hidden">
	<div class="close">×</div>
	<div class="b-slider fotorama" data-width="100%" data-background="#222" data-zoomToFit="false" data-fitToWindowHeight="true" data-fitToWindowHeightMargin="0"> 
		<%= image_tag "pages/quality/lace-1.jpg" %>
		<%= image_tag "pages/quality/lace-2.jpg" %>
		<%= image_tag "pages/quality/lace-3.jpg" %>
		<%= image_tag "pages/quality/lace-4.jpg" %>
		<%= image_tag "pages/quality/lace-5.jpg" %>
