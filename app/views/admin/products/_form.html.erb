<%= form_for [:admin, @product], :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= file_field_tag 'product_attached_images_image', :multiple => true, :name => "product[attached_images_attributes][][image]" %>
  </div>

  <%= f.fields_for :attached_images do |ff| %>
    <%= image_tag ff.object.image.url(:thumb5) %>
    <%= ff.check_box :_destroy %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
