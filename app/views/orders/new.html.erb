<section class="b-product-about">

	<div class="look col-1-2">
		<div class="photo">
			<div class="zoom"></div>
			<% width1 = FastImage.size(@product.attached_images.first.image.url)[0] %>
			<% height1 = FastImage.size(@product.attached_images.first.image.url)[1] %>
			<%= image_tag @product.attached_images.first.image.url, data: {width: width1, height: height1} %>
		</div>
	</div>
	<div class="col-1-2">
		<h1><%= @product.name %></h1>
		<div class="description">
			<p><%= @product.description %></p>
		</div>
		<%= render 'form' %>
	</div>
</section>
<div class="clr"></div>